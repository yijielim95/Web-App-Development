<!-- Conditional check for the presence of medalists in the playlist -->
{{#if singlePlaylist.medalist}}

  <!-- Table structure for displaying medalists' details -->
  <table class="ui fixed striped table">
    <thead>
      <!-- Table header with column titles -->
      <tr>
        <th style="text-align: center;">Medalists</th>
        <th style="text-align: center;">Age</th>
        <th style="text-align: center;">Country</th>
        <th style="text-align: center;">Awards Received</th>
        <th style="text-align: center;">Prize Money</th>
      </tr>
    </thead>
    <tbody>
      <!-- Loop through each medalist in the playlist -->
      {{#each singlePlaylist.medalist}}
        <tr>
          <!-- Medalist name -->
          <td style="text-align: center;">
            {{name}}
          </td>
          <!-- Medalist age -->
          <td style="text-align: center;">
            {{age}}
          </td>
          <!-- Medalist country -->
          <td style="text-align: center;"> 
            {{country}}
          </td>
          <!-- Awards received by the medalist -->
          <td style="text-align: center;">
            {{Awards}}
          </td>
          <!-- Prize money awarded to the medalist -->
          <td style="text-align: center;">
            {{prize_money}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
    
{{else}}
  <!-- Message displayed if the playlist is empty -->
  <h3 class="ui message">
    Empty playlist!
  </h3>

{{/if}}